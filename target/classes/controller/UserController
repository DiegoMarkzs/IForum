package controller;

import java.util.List;

import dao.PersistenciaDacException;
import dao.UserDAO;
import model.User;

public class UserController {

    private UserDAO userDAO = new UserDAO();

    public void cadastrarUsuario(User user) throws Exception {
        if (user == null) {
            throw new IllegalArgumentException("Usuário não pode ser nulo");
        }

        try {
            if (userDAO.emailJaExiste(user.getEmail())) {
                throw new Exception("E-mail já cadastrado.");
            }
            userDAO.save(user);
        } catch (PersistenciaDacException e) {
            throw new Exception("Erro ao cadastrar usuário.", e);
        }
    }

    public User fazerLogin(String email, String senha) throws Exception {
        try {
            User user = userDAO.autenticar(email, senha);
            if (user == null) {
                throw new Exception("E-mail ou senha inválidos.");
            }
            return user;
        } catch (PersistenciaDacException e) {
            throw new Exception("Erro ao realizar login.", e);
        }
    }

    public boolean emailJaExiste(String email) {
        return userDAO.emailJaExiste(email);
    }

    public List<User> listarTodos() throws Exception {
        try {
            return userDAO.getAll();
        } catch (PersistenciaDacException e) {
            throw new Exception("Erro ao listar usuários.", e);
        }
    }
}

